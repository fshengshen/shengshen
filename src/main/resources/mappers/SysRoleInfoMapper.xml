<!-- 此命名空间必须和对应Mapper.java文件的命名空间一致 -->
<mapper namespace="com.fyn.sys.mapper.SysRoleInfoMapper">

    <!-- 角色栏位列表 -->
    <resultMap id="rm" type="com.fyn.sys.beans.SysRoleInfo">
        <result property="roleId" jdbcType="INTEGER" column="role_id" />
        <result property="roleName" jdbcType="VARCHAR" column="role_name" />
    </resultMap>

    <!-- 获取角色 -->
    <select id="getSysRoleInfo" resultMap="rm" parameterType="com.fyn.sys.beans.SysRoleInfo">
        SELECT *
          FROM sys_role_info
         WHERE role_id = #{roleId}
    </select>

    <!-- 添加角色 -->
    <insert id="addSysRoleInfo" parameterType="com.fyn.sys.beans.SysRoleInfo">
        INSERT INTO sys_role_info(role_id,role_name)
        VALUES (#{roleId},#{roleName})
    </insert>

    <!-- 修改角色 -->
    <update id="editSysRoleInfo" parameterType="com.fyn.sys.beans.SysRoleInfo">
        UPDATE sys_role_info
           SET role_name=#{roleName}
         WHERE role_id = #{roleId}
    </update>

    <!-- 作废角色 -->
    <update id="delSysRoleInfo" parameterType="com.fyn.sys.beans.SysRoleInfo">
        UPDATE sys_role_info
            SET del_flag=1
         WHERE role_id = #{roleId}
    </update>
    
    <!-- 获取角色列表 -->
    <select id="getSysRoleInfoList" parameterType="com.fyn.sys.beans.SysRoleInfo" resultMap="rm">
       SELECT *
        FROM sys_role_info
        <if test="roleName != null and roleName != ''">
        WHERE role_name LIKE "%"#{roleName}"%"
        </if>
    </select>
    
    <!-- 修改角色信息 -->
    <update id="updateSysRoleInfo" parameterType="com.fyn.sys.beans.SysRoleInfo">
         UPDATE sys_role_info
            SET role_name=#{roleName}
          WHERE role_id = #{roleId}
    </update>
    
    <!-- 根据角色ID删除一个角色 -->
    <delete id="deleteSysRoleInfoById" parameterType="map">
        DELETE FROM sys_role_info 
        WHERE role_id IN
        <foreach item="item" collection="ids" open="(" separator="," close=")">
		  #{item}
		</foreach>
    </delete>
    
    <select id="getIdByName" resultType="int" parameterType="string">
        SELECT role_id
        FROM sys_role_info 
        WHERE role_name = #{roleName}   
    </select>

</mapper>
